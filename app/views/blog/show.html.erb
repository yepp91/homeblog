<%- title @post.title %>
<h3 class="post_title"><%= @post.title.html_safe %></h3><div class="yashare-auto-init" data-yashareType="link" data-yashareQuickServices="twitter,|,vkontakte,|,facebook"></div>
<div id="vk_like"></div>
<script type="text/javascript">
VK.Widgets.Like("vk_like", {type: "button"});
</script>

<p><%= @post.text.html_safe %></p>
<hr>
<div id="vk_comments"></div>
<script type="text/javascript">
VK.Widgets.Comments("vk_comments", {limit: 10, width: "520", attach: "*"});
</script>