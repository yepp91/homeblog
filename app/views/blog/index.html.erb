<h4>May the Force be with you</h4>
<br />
<div class="posts">
	<% @posts.each do |post| %>
		<div class="post">
			<div class="title"><a class="dashed" href="/post<%= post.id %>"><h1><%= post.title.html_safe %></h1></a></div><span class="created_at"><%= post.created_at %></span>			
			<div class="text"><%= post.text.html_safe %></div>			
		</div>
	<% end %>
</div>
<%= will_paginate @posts %>
