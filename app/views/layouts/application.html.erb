    <%= javascript_include_tag "application" %>

  </head>
  <body>
    <div class="upp_block" style="display:none;"><span class="upp_label">Наверх</span></div>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Harlov home</a>
          <div class="container nav-collapse">
            <ul class="nav">
              <li><%= link_to "Блог", "/blog"  %></li>
              <li><%= link_to "Статьи", "/items"  %></li>
              <li><%= link_to "Обратная связь", "/feedback"  %></li>             
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container main_content">
        <div class="row">
          <div class="span9">
            <%= bootstrap_flash %>
            <%= yield %>
          </div>         
        </div><!--/row-->      
    </div> <!-- /container -->    
  </body>
</html>
