<div class="article">
<h1><%= @article.title.html_safe %></h1>
<hr>
<div class="content_block">
	<%= @article.text.html_safe %>
</div>
<hr>
<div class="supply_block">
	<div class="tags">
		<%= @article.tags %>
	</div>
	<div id="vk_comments" class="vk_comments_block"></div>
	<script type="text/javascript">
		VK.Widgets.Comments("vk_comments", {limit: 10, width: "870", attach: "*"});
	</script>
</div>


</div>